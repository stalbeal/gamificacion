<div class="row">
	<div class="col-md-3">
		<p class="lead">Acciones</p>
		<div class="list-group">
			<a href="/question/" class="list-group-item active">Ver Todas</a>
			<a href="#" class="list-group-item active">Volver</a>
			<a href="/question/new/<%=phase.id%>" class="list-group-item active">Agregar otra pregunta</a>
		</div>
	</div>
	
	<div class="col-md-8 ">
		
		<p class="lead">Pregunta para la fase <%=phase.name%></p>
		<form method="POST" action="/question/create">
			<div class= "form-group">
				<input type="text" name="statement" class="form-control" placeholder="Enunciado de la pregunta" required>
				<input type="hidden" name="phase" class="form-control" value="<%=phase.id%>" required>
			</div>
			<div class= "form-group">
				<textarea type="text" name="description" class="form-control" placeholder="Descripcion" required></textarea>
			</div>
			<div class= "form-group">
				<input type="submit" value="Guardar" class="btn btn-primary pull-right" required>
			</div>
		</form>
	</div>
</div>